<section>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <% users.forEach(user => { %>
      <div class="col-md-12 col-xl-4" style="margin: 20px;">
        <div class="card" style="border-radius: 15px; box-shadow: 0 3px 10px rgb(0 0 0 / 0.3);">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img
                src="/images/profiles/<%= user.image %>"
                alt="/images/profiles/default.png"
                class="img-fluid"
                style="width: 200px; height: 200px; border-radius: 50%;"
              />
            </div>
            <h4 class="mb-2"><%= user.name %></h4>
            <p class="text-muted mb-4">
              <%= user.username %> <span class="mx-2">|</span>
              <a href="<%= user.url %>" target="_blank"><%= user.url %></a>
            </p>
            <button type="button" class="btn btn-primary btn-rounded">
              <a
                href="/profile/<%= user.username %>"
                style="text-decoration: none; color: rgb(255, 255, 255)"
                >View Profile</a
              >
            </button>
            <div class="d-flex justify-content-between text-center mt-5 mb-2">
              <div>
                <% if(user.posts > 0) { %>
                <p class="mb-2 h5"><%= user.posts %></p>
                <% } else { %>
                <p class="mb-2 h5">0</p>
                <% } %>
                <p class="text-muted mb-0">Posts</p>
              </div>
              <div class="px-3">
                <% if(user.followers > 0) { %>
                <p class="mb-2 h5"><%= user.followers %></p>
                <% }else { %>
                <p class="mb-2 h5">0</p>
                <% } %>
                <p class="text-muted mb-0">Followers</p>
              </div>
              <div>
                <% if(user.following > 0) { %>
                <p class="mb-2 h5"><%= user.following %></p>
                <% }else { %>
                <p class="mb-2 h5">0</p>
                <% } %>
                <p class="text-muted mb-0">Following</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
